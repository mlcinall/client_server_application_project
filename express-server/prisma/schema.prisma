generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Language {
  C
  CPP
  JAVA
  PYTHON
  JAVASCRIPT
  // Add more languages as needed
}

enum Status {
  ACCEPTED
  WRONG_ANSWER
  TIME_LIMIT_EXCEEDED
  COMPILE_ERROR
  RUNTIME_ERROR
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  username  String   @unique
  profileImage String?
  bio       String?
  submissions Submission[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Submission {
  id          String   @id @default(cuid())
  problem     Problem  @relation(fields: [problemId], references: [id])
  problemId   String
  language    Language
  code        String
  status      Status   @default(WRONG_ANSWER)
  executionTime Int?   // Execution time in milliseconds
  memoryUsage  Int?    // Memory usage in KB
  testCaseResults String? // Optional JSON or text to store results per test case
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Problem {
  id          String   @id @default(cuid())
  problemNo   Int      @unique
  title       String
  description String   // Problem statement
  difficulty  Difficulty @default(MEDIUM)  // Optional difficulty field
  submissions Submission[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
